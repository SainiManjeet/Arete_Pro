<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">


        <RelativeLayout

            android:id="@+id/layoutBedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtBedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:enabled="false"
                android:focusable="false"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/room_bedrooms"
                android:textColor="@color/colorBlack"

                android:textSize="@dimen/_15sdp">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/noOFBedrooms"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/txtBedrooms"
                app:np_dividerColor="@color/colorPrimary"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/_35sdp"
                app:np_max="20"
                app:np_min="1"
                app:np_orientation="horizontal"
                app:np_selectedTextColor="@color/colorPrimary"
                app:np_selectedTextSize="@dimen/_25sdp"
                app:np_textColor="@color/colorBlack"
                app:np_textSize="@dimen/_20sdp"
                app:np_typeface="@string/roboto_regular"
                app:np_width="@dimen/_90sdp"></com.shawnlin.numberpicker.NumberPicker>

        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/layoutKitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutBedroom"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtKitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:drawableTint="@color/colorPrimary"
                android:enabled="false"
                android:focusable="false"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/room_kitchen"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"></androidx.appcompat.widget.AppCompatTextView>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/noOfKitchens"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toRightOf="@id/txtKitchen"
                app:np_dividerColor="@color/colorPrimary"
                app:np_fadingEdgeEnabled="true"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/_35sdp"
                app:np_max="5"
                app:np_min="1"
                app:np_orientation="horizontal"
                app:np_scrollerEnabled="true"
                app:np_selectedTextColor="@color/colorPrimary"
                app:np_selectedTextSize="@dimen/_25sdp"
                app:np_textColor="@color/colorBlack"
                app:np_textSize="@dimen/_20sdp"
                app:np_typeface="@string/roboto_regular"
                app:np_width="@dimen/_90sdp"
                app:np_wrapSelectorWheel="true"></com.shawnlin.numberpicker.NumberPicker>


        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/layoutBathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutKitchen"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtBathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:drawableTint="@color/colorPrimary"
                android:enabled="false"
                android:focusable="false"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/room_bathrooms"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"></androidx.appcompat.widget.AppCompatTextView>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/noOfBathroom"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/txtBathroom"
                app:np_dividerColor="@color/colorPrimary"
                app:np_fadingEdgeEnabled="true"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/_35sdp"
                app:np_max="20"
                app:np_min="1"
                app:np_orientation="horizontal"

                app:np_scrollerEnabled="true"
                app:np_selectedTextColor="@color/colorPrimary"
                app:np_selectedTextSize="@dimen/_25sdp"
                app:np_textColor="@color/colorBlack"
                app:np_textSize="@dimen/_20sdp"
                app:np_typeface="@string/roboto_regular"
                app:np_width="@dimen/_90sdp"
                app:np_wrapSelectorWheel="true"></com.shawnlin.numberpicker.NumberPicker>


        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/layoutOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutBathroom"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:drawableTint="@color/colorPrimary"
                android:enabled="false"
                android:focusable="false"
                android:paddingStart="@dimen/_5sdp"
                android:text="@string/room_other"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"></androidx.appcompat.widget.AppCompatTextView>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/noOfOther"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_toRightOf="@id/txtOther"
                app:np_dividerColor="@color/colorPrimary"
                app:np_fadingEdgeEnabled="true"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/_35sdp"
                app:np_max="20"
                app:np_min="0"
                app:np_orientation="horizontal"
                app:np_scrollerEnabled="true"
                app:np_selectedTextColor="@color/colorPrimary"
                app:np_selectedTextSize="@dimen/_25sdp"
                app:np_textColor="@color/colorBlack"
                app:np_textSize="@dimen/_20sdp"
                app:np_typeface="@string/roboto_regular"
                app:np_width="@dimen/_90sdp"
                app:np_wrapSelectorWheel="true"></com.shawnlin.numberpicker.NumberPicker>


        </RelativeLayout>

        //


        <TextView
            android:id="@+id/txtSqft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutOther"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingStart="@dimen/_5sdp"
            android:text="SQFT"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSqft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSqft"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:hint="@string/room_sqft"
            android:inputType="numberDecimal"
            android:maxLength="15"
            android:paddingStart="@dimen/_10sdp"
            android:visibility="gone"></androidx.appcompat.widget.AppCompatEditText>


        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSqft"
            android:layout_marginTop="2dp"
            app:isb_indicator_color="@color/colorPrimary"
            app:isb_indicator_text_color="@color/colorWhite"
            app:isb_indicator_text_size="25sp"
            app:isb_max="10000"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/colorPrimary"
            app:isb_thumb_size="25dp"
            app:isb_tick_marks_drawable="@drawable/ic_adjust_black_24dp"
            app:isb_tick_marks_size="10dp"
            app:isb_tick_texts_color="@color/colorPrimary"
            app:isb_tick_texts_size="12sp"
            app:isb_track_background_color="@color/colorPrimary"
            app:isb_track_background_size="3dp"
            app:isb_track_progress_color="@color/colorPrimary"
            app:isb_track_progress_size="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar">

            <TextView
                android:id="@+id/txtStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="0" />

            <TextView
                android:id="@+id/txtEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10000" />

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTaskSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtSqft"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:backgroundTint="@color/colorPrimary"
            android:paddingStart="@dimen/_50sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:text="@string/popup_submit"
            android:textColor="@color/colorWhite"></androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>
</RelativeLayout>