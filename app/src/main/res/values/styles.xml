<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="RootConstraintLayout">
        <item name="android:background">@color/colorWhite</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    <style name="SimpleTextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SimpleTextViewBold" parent="SimpleTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
    </style>

    <style name="datepickerCustom" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->
        <!--<item name="android:textColorSecondary">@color/white</item>-->
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

  <!--  Rating Bar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/color_sun_flower</item>
    </style>

   <!-- Rating Bar height width-->
        <style name="foodRatingBar" >
            <!--<item name="android:minHeight">10dip</item>
            <item name="android:maxHeight">40dip</item>-->
            <item name="android:minWidth">1dip</item>
            <item name="android:maxWidth">1dip</item>
        </style>



</resources>
